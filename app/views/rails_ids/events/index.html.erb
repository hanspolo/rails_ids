<h1><%= t('.events') %></h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>TYPE</th>
      <th>DATE</th>
      <th></th>
      <th>Correct?</th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.id %></td>
        <td><%= event.event_type %></td>
        <td><%= event.created_at %></td>
        <td><%= link_to '->', rails_ids.event_path(event) %></td>
        <td>
          <% unless event.verified? %>
            <%= link_to 'Yes', rails_ids.verifiy_event_path(event) %> |
            <%= link_to 'No', rails_ids.deny_event_path(event) %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
